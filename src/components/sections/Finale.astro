---
// Finale Section - Thank You
---

<section class="scroll-section gradient-radial-deep" data-section="finale">
  <div class="finale-content">
    <div class="finale-card glass-panel">
      <div class="sparkle">✨</div>
      <h1 class="finale-title">You've Reached the End!</h1>
      <p class="finale-text">
        Thanks for exploring this glass effect showcase. Now go create something amazing with glassmorphism!
      </p>
      
      <div class="action-buttons">
        <button class="glass-button" onclick="window.scrollTo({left: 0, behavior: 'smooth'})">
          ← Start Over
        </button>
        <button class="glass-button primary">
          Explore More Templates
        </button>
      </div>
      
      <div class="stats">
        <div class="stat">
          <span class="stat-number">18</span>
          <span class="stat-label">Sections</span>
        </div>
        <div class="stat">
          <span class="stat-number">∞</span>
          <span class="stat-label">Possibilities</span>
        </div>
        <div class="stat">
          <span class="stat-number">100%</span>
          <span class="stat-label">Glass</span>
        </div>
      </div>
      
      <p class="credits">
        Built with Astro • Designed with Figma • Made with ❤️
      </p>
    </div>
  </div>
</section>

<style>
  .scroll-section {
    min-width: 100vw;
    height: 100vh;
    scroll-snap-align: start;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .finale-content {
    max-width: 800px;
    width: 100%;
  }
  
  .finale-card {
    padding: 4rem 3rem;
    text-align: center;
  }
  
  .sparkle {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    animation: sparkle 2s ease-in-out infinite;
  }
  
  .finale-title {
    font-size: 3rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    background: linear-gradient(135deg, #ffffff, #b0b0ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .finale-text {
    font-size: 1.25rem;
    line-height: 1.7;
    opacity: 0.9;
    margin: 0 0 2.5rem 0;
  }
  
  .action-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .glass-button.primary {
    background: rgba(255, 255, 255, 0.25);
  }
  
  .stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 2.5rem;
    padding: 2rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .stat {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
  }
  
  .stat-label {
    font-size: 0.875rem;
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .credits {
    font-size: 0.938rem;
    opacity: 0.7;
    margin: 0;
  }
  
  @keyframes sparkle {
    0%, 100% {
      transform: scale(1) rotate(0deg);
    }
    25% {
      transform: scale(1.1) rotate(-10deg);
    }
    75% {
      transform: scale(1.1) rotate(10deg);
    }
  }
  
  @media (max-width: 768px) {
    .scroll-section {
      height: auto;
      padding: 2rem 1rem;
    }
    
    .finale-content {
      max-width: 100%;
    }
    
    .finale-card {
      padding: 2rem 1.5rem;
    }
    
    .finale-title {
      font-size: 1.875rem;
    }
    
    .finale-text {
      font-size: 1rem;
    }
    
    .action-buttons {
      flex-direction: column;
    }
    
    .stats {
      gap: 1.5rem;
    }
    
    .stat-number {
      font-size: 2.5rem;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger, SplitText, TextPlugin } from '../../utils/gsap-setup';
  
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section="finale"]');
    if (!section) return;
    
    // SplitText animation for finale title
    const finaleTitle = section.querySelector('.finale-title');
    if (finaleTitle) {
      const split = new SplitText(finaleTitle, { type: 'chars,words' });
      
      gsap.from(split.chars, {
        scrollTrigger: {
          trigger: section,
          start: 'left 80%',
          horizontal: true,
          scroller: '.horizontal-scroll-container'
        },
        opacity: 0,
        scale: 0,
        rotation: 180,
        stagger: 0.025,
        duration: 0.6,
        ease: 'back.out(2)',
        delay: 0.2
      });
    }
    
    // Sparkle burst
    gsap.from('[data-section="finale"] .sparkle', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container'
      },
      scale: 0,
      rotation: 180,
      duration: 0.8,
      ease: 'back.out(2)'
    });
    
    // Finale text fade in
    gsap.from('[data-section="finale"] .finale-text', {
      scrollTrigger: {
        trigger: section,
        start: 'left 75%',
        horizontal: true,
        scroller: '.horizontal-scroll-container'
      },
      opacity: 0,
      y: 30,
      duration: 0.7,
      ease: 'power2.out',
      delay: 0.8
    });
    
    // Action buttons scale in
    gsap.from('[data-section="finale"] .glass-button', {
      scrollTrigger: {
        trigger: section,
        start: 'left 70%',
        horizontal: true,
        scroller: '.horizontal-scroll-container'
      },
      opacity: 0,
      scale: 0.8,
      y: 30,
      duration: 0.6,
      stagger: 0.15,
      ease: 'back.out(1.5)',
      delay: 1
    });
    
    // Stats counter animation
    const statNumbers = section.querySelectorAll('.stat-number');
    if (statNumbers.length > 0) {
      ScrollTrigger.create({
        trigger: section,
        start: 'left 70%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true,
        onEnter: () => {
          statNumbers.forEach((stat, index) => {
            const finalValue = stat.textContent;
            
            // Only animate if it's a number (not "∞")
            if (!isNaN(parseFloat(finalValue))) {
              gsap.from(stat, {
                textContent: 0,
                duration: 2,
                ease: 'power2.inOut',
                snap: { textContent: 1 },
                delay: 0.9 + (index * 0.15)
              });
            } else {
              // For non-numeric values like "∞", just fade in with scale
              gsap.from(stat, {
                opacity: 0,
                scale: 0.5,
                duration: 0.6,
                ease: 'back.out(2)',
                delay: 0.9 + (index * 0.15)
              });
            }
          });
        },
        once: true
      });
    }
    
    // Stats fade in
    gsap.from('[data-section="finale"] .stats', {
      scrollTrigger: {
        trigger: section,
        start: 'left 70%',
        horizontal: true,
        scroller: '.horizontal-scroll-container'
      },
      opacity: 0,
      y: 30,
      duration: 0.6,
      ease: 'power2.out',
      delay: 0.8
    });
    
    // Credits fade in
    gsap.from('[data-section="finale"] .credits', {
      scrollTrigger: {
        trigger: section,
        start: 'left 70%',
        horizontal: true,
        scroller: '.horizontal-scroll-container'
      },
      opacity: 0,
      y: 20,
      duration: 0.6,
      ease: 'power2.out',
      delay: 1.3
    });
  });
</script>
