---
// Contents / Table of Contents Section
---

<section class="scroll-section gradient-radial-deep" data-section="contents">
  <div class="section-content-centered">
    <div class="contents-panel glass-panel">
      <h2 class="section-title">Table of Contents</h2>
      
      <nav class="contents-menu">
        <a href="#introduction" class="menu-item glass-card" data-scroll-to="2">
          <span class="arrow">→</span>
          <span>Introduction & Settings</span>
        </a>
        <a href="#glass-ui" class="menu-item glass-card" data-scroll-to="4">
          <span class="arrow">→</span>
          <span>Glass for UI</span>
        </a>
        <a href="#prototyping" class="menu-item glass-card" data-scroll-to="9">
          <span class="arrow">→</span>
          <span>Glass in Prototyping</span>
        </a>
        <a href="#have-fun" class="menu-item glass-card" data-scroll-to="10">
          <span class="arrow">→</span>
          <span>Glass for Fun</span>
        </a>
        <a href="#considerations" class="menu-item glass-card" data-scroll-to="13">
          <span class="arrow">→</span>
          <span>Considerations</span>
        </a>
        <a href="#glass-resources" class="menu-item glass-card" data-scroll-to="15">
          <span class="arrow">→</span>
          <span>Glass Resources</span>
        </a>
      </nav>
      
      <div class="navigation-hint glass">
        <p class="hint-text">Use arrow keys or scroll to navigate</p>
        <div class="hint-keys">
          <kbd class="glass">←</kbd>
          <kbd class="glass">→</kbd>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .scroll-section {
    min-width: 100vw;
    min-height: 100vh;
    height: auto;
    scroll-snap-align: start;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 2rem;
  }
  
  .section-content-centered {
    max-width: 800px;
    width: 100%;
    padding: 2rem 0;
  }
  
  .contents-panel {
    padding: 3rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 600;
    margin: 0 0 2rem 0;
    text-align: center;
  }
  
  .contents-menu {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .menu-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.25rem 1.5rem;
    border-radius: 12px;
    font-size: 1.125rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .menu-item:hover {
    transform: translateX(8px);
  }
  
  .arrow {
    font-size: 1.5rem;
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .menu-item:hover .arrow {
    opacity: 1;
  }
  
  .navigation-hint {
    padding: 1.5rem;
    border-radius: 16px;
    text-align: center;
  }
  
  .hint-text {
    margin: 0 0 1rem 0;
    opacity: 0.8;
    font-size: 1rem;
  }
  
  .hint-keys {
    display: flex;
    gap: 0.5rem;
    justify-content: center;
  }
  
  kbd {
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-family: var(--font-mono);
    font-size: 1.25rem;
    min-width: 48px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  @media (max-width: 768px) {
    .contents-panel {
      padding: 2rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .menu-item {
      padding: 1rem;
      font-size: 1rem;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from '../../utils/gsap-setup';
  
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section="contents"]');
    if (!section) return;
    
    // Ensure elements are visible initially
    gsap.set('.contents-panel .section-title', { opacity: 1 });
    gsap.set('.menu-item', { opacity: 1, x: 0 });
    gsap.set('.navigation-hint', { opacity: 1, y: 0 });
    
    // Title fade in
    gsap.from('.contents-panel .section-title', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: -30,
      duration: 0.6,
      ease: 'power2.out'
    });
    
    // Menu items cascade in with stagger
    gsap.from('.menu-item', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      x: -50,
      duration: 0.6,
      stagger: 0.1,
      ease: 'power3.out',
      delay: 0.2
    });
    
    // Navigation hint fade in
    gsap.from('.navigation-hint', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: 20,
      duration: 0.6,
      ease: 'power2.out',
      delay: 0.8
    });
  });
  
  // Anchor navigation for Contents menu
  document.addEventListener('click', (e) => {
    const link = e.target.closest('a[data-scroll-to]');
    if (link) {
      e.preventDefault();
      const sectionIndex = parseInt(link.getAttribute('data-scroll-to'));
      const container = document.querySelector('.horizontal-scroll-container');
      if (container) {
        const targetScroll = sectionIndex * window.innerWidth;
        gsap.to(container, {
          scrollLeft: targetScroll,
          duration: 1.2,
          ease: 'power3.inOut'
        });
      }
    }
  });
</script>
