---
// Glass Effect Overview - Hero Section
---

<section class="scroll-section gradient-radial-purple" data-section="glass-overview">
  <div class="section-content">
    <div class="content-left">
      <h1 class="hero-title">Glass Effect</h1>
      <p class="hero-subtitle">
        Explore the glassmorphism design trend with backdrop filters, transparency, and blur effects
      </p>
      <button class="glass-button">
        Get Started
        <span>â†’</span>
      </button>
    </div>
    
    <div class="visual-demo">
      <div class="glass-demo-card glass">
        <div class="demo-content">
          <div class="demo-circle"></div>
          <p>Glassmorphism</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .scroll-section {
    min-width: 100vw;
    height: 100vh;
    scroll-snap-align: start;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    position: relative;
  }
  
  .section-content {
    max-width: 1280px;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 4rem;
  }
  
  .content-left {
    flex: 1;
    max-width: 600px;
  }
  
  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 600;
    margin: 0 0 1.5rem 0;
    line-height: 1.1;
    background: linear-gradient(to right, #ffffff, #e0e0e0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  
  .hero-subtitle {
    font-size: 1.5rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    font-weight: 300;
  }
  
  .visual-demo {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 500px;
  }
  
  .glass-demo-card {
    width: 300px;
    height: 300px;
    padding: 2rem;
    border-radius: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: float 6s ease-in-out infinite;
  }
  
  .demo-content {
    text-align: center;
  }
  
  .demo-circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(255,255,255,0.3), rgba(255,255,255,0.1));
    margin: 0 auto 1rem;
    box-shadow: inset 0 2px 8px rgba(255,255,255,0.3);
  }
  
  .demo-content p {
    font-size: 1.25rem;
    font-weight: 500;
    color: white;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-20px);
    }
  }
  
  @media (max-width: 768px) {
    .scroll-section {
      height: auto;
      padding: 2rem 1rem;
    }
    
    .section-content {
      flex-direction: column;
      text-align: center;
    }
    
    .content-left {
      max-width: 100%;
    }
    
    .hero-title {
      font-size: clamp(2.5rem, 10vw, 3.5rem);
    }
    
    .hero-subtitle {
      font-size: 1.125rem;
    }
    
    .glass-demo-card {
      width: 250px;
      height: 250px;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger, SplitText } from '../../utils/gsap-setup';
  
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section="glass-overview"]');
    if (!section) return;
    
    // SplitText animation for hero title
    const heroTitle = section.querySelector('.hero-title');
    if (heroTitle) {
      const split = new SplitText(heroTitle, { type: 'chars,words' });
      
      gsap.from(split.chars, {
        scrollTrigger: {
          trigger: section,
          start: 'left 80%',
          horizontal: true,
          scroller: '.horizontal-scroll-container',
        once: true
        },
        opacity: 0,
        y: 50,
        rotationX: -90,
        transformOrigin: '0% 50% -50',
        stagger: 0.02,
        duration: 0.8,
        ease: 'back.out(1.7)'
      });
    }
    
    // Entrance animation for hero content
    gsap.from('.content-left .hero-subtitle', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        end: 'left 20%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: 40,
      duration: 0.8,
      ease: 'power3.out',
      delay: 0.4
    });
    
    gsap.from('.content-left .glass-button', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        end: 'left 20%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: 40,
      scale: 0.9,
      duration: 0.8,
      ease: 'back.out(1.7)',
      delay: 0.6
    });
    
    // Glass card float in with rotation
    gsap.from('.glass-demo-card', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        end: 'left 20%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      scale: 0.8,
      y: 60,
      rotation: -10,
      duration: 1,
      ease: 'back.out(1.5)',
      delay: 0.5
    });
  });
</script>
