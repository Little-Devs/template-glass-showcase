---
// Settings Section
---

<section class="scroll-section gradient-radial-purple" data-section="settings">
  <div class="section-wrapper">
    <div class="settings-panel glass-panel">
      <h2 class="section-title">Glass Effect Settings</h2>
      <p class="section-subtitle">Adjust these properties to create perfect glass effects</p>
      
      <div class="settings-list">
        <div class="setting-item glass-card">
          <div class="setting-header">
            <span class="setting-name">Background Blur</span>
            <span class="setting-value">10px</span>
          </div>
          <div class="setting-bar">
            <div class="setting-fill" style="width: 40%"></div>
          </div>
          <p class="setting-desc">Controls the blur intensity of content behind</p>
        </div>
        
        <div class="setting-item glass-card">
          <div class="setting-header">
            <span class="setting-name">Transparency</span>
            <span class="setting-value">15%</span>
          </div>
          <div class="setting-bar">
            <div class="setting-fill" style="width: 15%"></div>
          </div>
          <p class="setting-desc">Opacity of the glass layer</p>
        </div>
        
        <div class="setting-item glass-card">
          <div class="setting-header">
            <span class="setting-name">Border Opacity</span>
            <span class="setting-value">18%</span>
          </div>
          <div class="setting-bar">
            <div class="setting-fill" style="width: 18%"></div>
          </div>
          <p class="setting-desc">Subtle border highlight visibility</p>
        </div>
        
        <div class="setting-item glass-card">
          <div class="setting-header">
            <span class="setting-name">Shadow Blur</span>
            <span class="setting-value">32px</span>
          </div>
          <div class="setting-bar">
            <div class="setting-fill" style="width: 65%"></div>
          </div>
          <p class="setting-desc">Soft shadow for depth perception</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .scroll-section {
    min-width: 100vw;
    height: 100vh;
    scroll-snap-align: start;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .section-wrapper {
    max-width: 700px;
    width: 100%;
  }
  
  .settings-panel {
    padding: 3rem;
  }
  
  .section-title {
    font-size: 2.5rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    opacity: 0.8;
    margin: 0 0 2rem 0;
  }
  
  .settings-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  
  .setting-item {
    padding: 1.5rem;
    border-radius: 12px;
  }
  
  .setting-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }
  
  .setting-name {
    font-weight: 600;
    font-size: 1.125rem;
  }
  
  .setting-value {
    font-family: var(--font-mono);
    font-size: 0.875rem;
    opacity: 0.8;
  }
  
  .setting-bar {
    height: 6px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    overflow: hidden;
    margin-bottom: 0.75rem;
  }
  
  .setting-fill {
    height: 100%;
    background: linear-gradient(90deg, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.9));
    border-radius: 3px;
  }
  
  .setting-desc {
    font-size: 0.875rem;
    opacity: 0.7;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .scroll-section {
      height: auto;
      padding: 2rem 1rem;
    }
    
    .section-wrapper {
      max-width: 100%;
    }
    
    .settings-panel {
      padding: 1.5rem;
    }
    
    .section-title {
      font-size: 1.875rem;
    }
    
    .setting-item {
      padding: 1rem;
      gap: 0.75rem;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from '../../utils/gsap-setup';
  
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section="settings"]');
    if (!section) return;
    
    gsap.from('[data-section="settings"] .settings-panel', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      x: -60,
      duration: 0.8,
      ease: 'power3.out'
    });
    
    gsap.from('[data-section="settings"] .setting-item', {
      scrollTrigger: {
        trigger: section,
        start: 'left 75%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      x: -40,
      duration: 0.6,
      stagger: 0.1,
      ease: 'power2.out',
      delay: 0.2
    });
  });
</script>
