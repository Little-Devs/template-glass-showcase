<style>
  .scroll-section {
    min-width: 100vw;
    min-height: 100vh;
    height: auto;
    scroll-snap-align: start;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    padding: 2rem;
  }
  
  .section-wrapper {
    max-width: 1200px;
    width: 100%;
  }
  
  .section-title {
    font-size: 3rem;
    font-weight: 600;
    text-align: center;
    margin: 0 0 0.5rem 0;
  }
  
  .section-subtitle {
    font-size: 1.125rem;
    text-align: center;
    opacity: 0.85;
    margin: 0 0 3rem 0;
  }
  
  .resources-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 1.5rem;
  }
  
  .resource-card {
    padding: 2rem;
    border-radius: 16px;
    position: relative;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    cursor: pointer;
  }
  
  .resource-card:hover {
    transform: translateY(-6px);
  }
  
  .card-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
  
  .resource-card h3 {
    margin: 0 0 0.75rem 0;
    font-size: 1.5rem;
    font-weight: 600;
  }
  
  .resource-card p {
    margin: 0;
    opacity: 0.8;
    line-height: 1.6;
    flex-grow: 1;
  }
  
  .card-arrow {
    align-self: flex-end;
    margin-top: 1rem;
    font-size: 1.5rem;
    opacity: 0.6;
    transition: all 0.3s;
  }
  
  .resource-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(4px);
  }
  
  @media (max-width: 768px) {
    .resources-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from '../../utils/gsap-setup';
  
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section="resource-cards"]');
    if (!section) return;
    
    gsap.from('[data-section="resource-cards"] h2', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: -40,
      duration: 0.8,
      ease: 'power3.out'
    });
    
    gsap.from('[data-section="resource-cards"] .resource-card, [data-section="resource-cards"] .glass-card', {
      scrollTrigger: {
        trigger: section,
        start: 'left 75%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: 60,
      scale: 0.85,
      rotation: (index) => (index % 2 === 0 ? 4 : -4),
      duration: 0.7,
      stagger: 0.12,
      ease: 'back.out(1.5)',
      delay: 0.2
    });
  });
</script>
