---
// Glass Effects Gallery
---

<section class="scroll-section gradient-radial-purple" data-section="glass-effects">
  <div class="section-wrapper">
    <h2 class="section-title-centered">Glass Effect Variations</h2>
    
    <div class="effects-showcase">
      <div class="effect-item">
        <div class="effect-demo glass">
          <span class="demo-label">Classic Glass</span>
        </div>
        <p class="effect-name">Standard</p>
      </div>
      
      <div class="effect-item">
        <div class="effect-demo glass-light">
          <span class="demo-label">Light Glass</span>
        </div>
        <p class="effect-name">Light</p>
      </div>
      
      <div class="effect-item">
        <div class="effect-demo glass-strong">
          <span class="demo-label">Strong Glass</span>
        </div>
        <p class="effect-name">Strong</p>
      </div>
      
      <div class="effect-item">
        <div class="effect-demo glass-dark">
          <span class="demo-label">Dark Glass</span>
        </div>
        <p class="effect-name">Dark</p>
      </div>
      
      <div class="effect-item">
        <div class="effect-demo frosted-glass">
          <span class="demo-label">Frosted Glass</span>
        </div>
        <p class="effect-name">Frosted</p>
      </div>
      
      <div class="effect-item">
        <div class="effect-demo glass-inset">
          <span class="demo-label">Inset Glass</span>
        </div>
        <p class="effect-name">Inset</p>
      </div>
    </div>
  </div>
</section>

<style>
  .scroll-section {
    min-width: 100vw;
    height: 100vh;
    scroll-snap-align: start;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }
  
  .section-wrapper {
    max-width: 1100px;
    width: 100%;
  }
  
  .section-title-centered {
    font-size: 3rem;
    font-weight: 600;
    text-align: center;
    margin: 0 0 3rem 0;
  }
  
  .effects-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }
  
  .effect-item {
    text-align: center;
  }
  
  .effect-demo {
    aspect-ratio: 1;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
    transition: all 0.3s ease;
    cursor: pointer;
  }
  
  .effect-demo:hover {
    transform: scale(1.05) rotate(2deg);
  }
  
  .demo-label {
    font-size: 1.25rem;
    font-weight: 600;
  }
  
  .effect-name {
    font-size: 1rem;
    font-weight: 500;
    opacity: 0.8;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .effects-showcase {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
    
    .scroll-section {
      height: auto;
      padding: 2rem 1rem;
    }
    
    .section-title-centered {
      font-size: 2rem;
    }
  }
  
  @media (max-width: 480px) {
    .effects-showcase {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  import { gsap, ScrollTrigger } from '../../utils/gsap-setup';
  
  document.addEventListener('DOMContentLoaded', () => {
    const section = document.querySelector('[data-section="glass-effects"]');
    if (!section) return;
    
    // Title reveal
    gsap.from('[data-section="glass-effects"] .section-title-centered', {
      scrollTrigger: {
        trigger: section,
        start: 'left 80%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      y: -40,
      duration: 0.8,
      ease: 'power3.out'
    });
    
    // Effect cards pop in with scale and rotation
    gsap.from('[data-section="glass-effects"] .effect-item', {
      scrollTrigger: {
        trigger: section,
        start: 'left 70%',
        horizontal: true,
        scroller: '.horizontal-scroll-container',
        once: true
      },
      opacity: 0,
      scale: 0.8,
      y: 50,
      rotation: (index) => (index % 2 === 0 ? 5 : -5),
      duration: 0.7,
      stagger: 0.12,
      ease: 'back.out(1.4)',
      delay: 0.2
    });
  });
</script>
